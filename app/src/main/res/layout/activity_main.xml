<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/grinchedregular"
        android:text="Valitse vaikeusaste"
        android:textColor="#010203"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEasy"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#010203"
        android:fontFamily="@font/grinchedregular"
        android:text="Helppo"
        android:textSize="20sp"
        app:cornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonMid"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#010203"
        android:fontFamily="@font/grinchedregular"
        android:text="Keskivaikea"
        android:textSize="18sp"
        app:cornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEasy" />

    <Button
        android:id="@+id/buttonHard"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#010203"
        android:fontFamily="@font/grinchedregular"
        android:text="Vaikea"
        android:textSize="20sp"
        app:cornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMid" />

    <Button
        android:id="@+id/buHardcore"
        android:layout_width="156dp"
        android:layout_height="77dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="145dp"
        android:backgroundTint="#c90d18"
        android:fontFamily="@font/grinchedregular"
        android:text="Hardcore"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHard"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buHardcore" />


</androidx.constraintlayout.widget.ConstraintLayout>